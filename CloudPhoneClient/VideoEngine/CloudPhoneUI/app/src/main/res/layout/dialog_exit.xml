<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_corner_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rg_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/shape_radio_group"
        android:checkedButton="@id/rb_definition_low"
        android:divider="@drawable/shape_radio_group_divider"
        android:orientation="horizontal"
        android:padding="2dp"
        android:showDividers="middle">

        <RadioButton
            android:id="@+id/rb_definition_low"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_button_left"
            android:text="流畅" />

        <RadioButton
            android:id="@+id/rb_definition_high"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_button_right"
            android:text="高清" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_positive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text="@string/exit_phone"
            android:textColor="@color/selector_exit_button_text"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f3f3f3" />

        <Button
            android:id="@+id/tv_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/selector_exit_button_text"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>