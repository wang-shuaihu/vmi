<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99D1D1D1"
    tools:ignore="GradleDependency">

    <com.huawei.cloudphone.widget.StatisticDecodeFpsView
        android:id="@+id/decodeFrameRate"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.huawei.cloudphone.widget.StatisticDecodeFpsView
        android:id="@+id/bandWidth"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/decodeFrameRate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.huawei.cloudphone.widget.StatisticDecodeLatencyView
        android:id="@+id/iFrame"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bandWidth" />

    <com.huawei.cloudphone.widget.StatisticDecodeLatencyView
        android:id="@+id/frameTime"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iFrame" />

    <com.huawei.cloudphone.widget.StatisticTouchLatencyView
        android:id="@+id/frameTouchTime"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameTime" />
</androidx.constraintlayout.widget.ConstraintLayout>